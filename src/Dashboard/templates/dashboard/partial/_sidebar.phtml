$escape = fn(string $v) => htmlspecialchars($v, ENT_QUOTES, 'UTF-8');

$icon = static function ($page) use ($escape): string {
    $i = $page->get('icon');
    return $i ? '<i data-feather="' . $escape((string) $i) . '"></i>' : '';
};
